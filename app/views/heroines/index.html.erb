<h2>All Heroines</h2>

<%= form_tag heroines_path, method: :get do%>
<%= label_tag "Search by Superpower:" %><br>
<%= text_field_tag :search, params[:search]%>
<%= submit_tag "Go" %>
<% end %>

<%if params[:search]%>
  <% heroines = @heroines.select{|heroine|heroine.power.name == params[:search].downcase}%>
  
  <%if heroines.empty?%>
    <h2>Nope, Chuck Testa</h2>
    <%= button_to "Back", heroines_path, method: :get %>
  <%else%>
  <br>
  <%= button_to "Back", heroines_path, method: :get %>
    <ul>
      <% heroines.each do |heroine| %>
        <li>
          <%=link_to  "#{heroine.super_name}", heroine_path(heroine) %>
        </li>
        <br>
      <% end %>
    </ul>
  <% end %>
  
<%else%>



<br>

<%= button_to "Add a Heroine", new_heroine_path, method: :get %> 
<ul class="index_heroine_pics">
  <% @heroines.each do |heroine| %>
    <li>
      <%= image_tag("#{heroine.image}", size: "450x300")%>
      <%= link_to  "#{heroine.super_name}", heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>
<% end %>
